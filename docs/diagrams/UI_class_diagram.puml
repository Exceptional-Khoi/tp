' ===== Types used by UI =====
class Scanner

package "seedu.fitchasers.workouts" as pkg_workouts #DDDDFF {
  class Exercise {
    - name: String
    - sets: ArrayList<Integer>
    --
    + addSet(reps: int): void
    + getSets(): ArrayList<Integer>
    + toString(): String
  }

  class Workout {
    - workoutName: String
    - duration: int
    - exercises: ArrayList<Exercise>
    --
    + addExercise(exercise: Exercise): void
    + getExercises(): ArrayList<Exercise>
    + getWorkoutDateString(): String
  }
}

package "seedu.fitchasers.user" as pkg_user #DDFFDD {
  class WeightManager {
    - currentUser: Person
    --
    + addWeight(command: String): void
    + viewWeights(): void
    + isValidWeight(weight: double): boolean
  }
}

' ===== UI class (trimmed to essentials) =====
class UI {
  - scanner: Scanner
  --
  + readCommand(): String
  + showMessage(message: String): void
  + showError(error: String): void
  + showHelp(): void
  + displayDetailsOfWorkout(workout: Workout): void
  + readInsideRightBubble(prompt: String): String
  + confirmationMessageWithCancel(): Boolean
}

' ===== Relationships =====
UI *-- Scanner
UI ..> Workout : uses
UI ..> Exercise : uses
UI ..> WeightManager : uses

WeightManager ..> UI : uses
